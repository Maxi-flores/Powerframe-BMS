+import { motion } from 'framer-motion';
+import { widgetLibrary } from '@/widgets/library';
+import { useRef } from 'react';
+
+export function AddWidgetMenu() {
+  const scrollRef = useRef<HTMLDivElement>(null);
+
+  return (
+    <motion.div 
+      initial={{ scale: 0.8, opacity: 0 }}
+      animate={{ scale: 1, opacity: 1 }}
+      className="fixed bottom-8 right-8 z-50"
+    >
+      <button
+        onClick={() => document.getElementById('widget-modal')?.showModal()}
+        className="btn btn-circle btn-primary shadow-2xl hover:scale-110 transition-all
+                   w-24 h-24 text-5xl" // ← FIX #2: THICC AF
+      >
+        +
+      </button>
+
+      <dialog id="widget-modal" className="modal">
+        <div className="modal-box w-11/12 max-w-5xl h-[80vh]">
+          <form method="dialog">
+            <button className="btn btn-sm btn-circle absolute right-4 top-4">✕</button>
+          </form>
+          <h3 className="font-bold text-2xl mb-6">Widget Vault</h3>
+          
+          <div 
+            ref={scrollRef}
+            className="grid grid-cols-4 gap-6 overflow-y-auto h-full pb-20 pr-4
+                       scrollbar scrollbar-thumb-cyan-400 scrollbar-thin" // ← FIX #5
+          >
+            {widgetLibrary.map((widget) => (
+              <motion.div
+                key={widget.id}
+                draggable
+                onDragStart={(e) => {
+                  e.dataTransfer.setData('widget', JSON.stringify(widget));
+                }}
+                whileHover={{ scale: 1.05 }}
+                whileDrag={{ scale: 1.1 }}
+                className="card bg-base-100 shadow-xl cursor-move p-6 hover:ring-4 ring-cyan-400"
+              >
+                <widget.preview />
+                <div className="text-center mt-4 font-semibold">{widget.name}</div>
+              </motion.div>
+            ))}
+          </div>
+        </div>
+      </dialog>
+    </motion.div>
+  );
+}
